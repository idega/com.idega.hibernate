<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">

    <persistence-unit name="idegaHibernate" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <mapping-file>classpath*:com/idega/**/orm*.xml</mapping-file>
        <mapping-file>classpath*:is/idega/**/orm*.xml</mapping-file>
        <mapping-file>classpath*:is/illuminati/**/orm*.xml</mapping-file>
        <mapping-file>classpath*:se/fujitsu/**/orm*.xml</mapping-file>
        <mapping-file>classpath*:se/idega/**/orm*.xml</mapping-file>
        <mapping-file>classpath*:org/jbpm/**/*.hbm.xml</mapping-file>
        <mapping-file>classpath*:com/idega/**/*.hbm.xml</mapping-file>
        <mapping-file>classpath*:se/fujitsu/**/*.hbm.xml</mapping-file>
        <exclude-unlisted-classes/>

        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>

        <properties>
            <property name="hibernate.connection.datasource" value="java:comp/env/jdbc/DefaultDS" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.current_session_context_class" value="thread" />
            <property name="hibernate.bytecode.use_reflection_optimizer" value="true" />
            <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.EhCacheRegionFactory" />
            <property name="hibernate.cache.use_second_level_cache" value="true" />
            <property name="hibernate.cache.use_query_cache" value="true" />
            <property name="hibernate.cache.default_cache_concurrency_strategy" value="nonstrict-read-write" />
            <property name="hibernate.generate_statistics" value="false" />
            <property name="hibernate.show_sql" value="true" />
        </properties>

    </persistence-unit>
    
</persistence>